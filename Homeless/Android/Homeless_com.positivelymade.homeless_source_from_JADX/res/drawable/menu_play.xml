<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="7dp" />
            <stroke android:width="2dp" android:color="@color/orange" />
            <gradient android:startColor="@color/orange" android:endColor="@color/orange" android:angle="-90.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="7dp" />
            <stroke android:width="2dp" android:color="@color/orange" />
            <solid android:color="@color/orange" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="7dp" />
            <stroke android:width="2dp" android:color="@color/grey2" />
            <gradient android:startColor="@color/transparent" android:endColor="@color/transparent" android:angle="-90.0" />
        </shape>
    </item>
</selector>
