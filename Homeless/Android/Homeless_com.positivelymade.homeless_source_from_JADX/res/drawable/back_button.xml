<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/orange" />
    <item android:state_focused="true" android:drawable="@color/orange" />
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/orange" />
            <stroke android:width="3dp" android:color="@color/greye" />
            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" />
        </shape>
    </item>
</selector>
