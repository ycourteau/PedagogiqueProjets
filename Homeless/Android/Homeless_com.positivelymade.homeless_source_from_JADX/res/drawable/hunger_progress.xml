<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/white" />
            <stroke android:width="2dp" android:color="@color/hunger" />
        </shape>
    </item>
    <item>
        <clip android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end">
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <solid android:color="@color/hunger" />
            </shape>
        </clip>
    </item>
</layer-list>
